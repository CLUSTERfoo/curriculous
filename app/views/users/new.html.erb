<% content_for :page_title, 'Sign up' %>
<span class="subheader">Sign up</span>
<hr>

<p>
    Already a member? <%= link_to "Sign in here", signin_path %>.
</p>

<div class="row"> 
    <div class="small-12 large-6 push-3 columns">
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages' %>

            <%= f.label :username %>
            <%= f.text_field :username %>

            <%= label_tag :phone, "If you are a real boy, leave this blank!" %>
            <%= text_field_tag :phone %>

            <%= f.label :password %>
            <%= f.password_field :password %>

            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>

            <%= f.submit "Create new account", class: "mr-button round small" %>

        <% end %>
    </div>
</div>
