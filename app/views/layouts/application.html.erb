  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="row">
      <header class="small-12 columns container">

        <div class="row">
          <hgroup class="small-12 large-6 columns" id="header-title">
            <h1>Curriculous!</h1>
            <p>Course plans for self-learners.</p>
          </hgroup> 
          <div class="small-12 large-6 columns">
            <ul class="button-group round even-3">
              <li><a href="#" class="button">Learn</a></li>
              <li><a href="#" class="button">Teach</a></li>
              <li><a href="#" class="button">Logout</a></li>
            </ul>
          </div>
        </div>
      </header >
    </div>

    <div class="row">
      <div class="small-12 columns">
        <%= yield %>
      </div>
    </div>

    <div class="row">
      <foter class="small-12 columns">
        <p>&copy; 2013 Curriculous by <%= link_to "Noam Gagliardi", 
                                                "http://CLUSTERfoo.com" %>, 
                                    <%= link_to "@CLUSTERfoo", 
                                                "http://twitter.com/CLUSTERfoo" %>
      </footer>
    </div>
  <%= javascript_include_tag "application" %>
  </body>
</html>
