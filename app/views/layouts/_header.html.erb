<header class="small-12 columns container">
    <div class="row">
        <hgroup class="small-12 large-6 columns" id="header-title">
            <h1>MemoRabble!</h1>
        </hgroup> 
        <div class="small-12 large-6 columns">
            <dl class="sub-nav">
                <dd><%= link_to 'Home', root_path %>
                <dd><%= link_to 'About', about_path %></dd>
                <dd><%= link_to 'Contribute', contribute_path %></dd>
            </dl>
            <ul class="button-group round even-2">
                <% if current_user %>
                    <li><%= link_to 'Profile', user_path(current_user.id), class: 'button' %></li>
                    <li><%= link_to 'Sign out', :signout, method: 'delete', class: 'button' %></li>
                <% else %>
                    <li><%= link_to 'Sign in', signin_path, class: 'button' %></li>
                    <li><%= link_to 'Sign up', signup_path, class: 'button' %></li>
                <% end %>
            </ul>
        </div>
    </div>
</header>

